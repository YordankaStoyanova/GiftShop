@model IEnumerable<BusinessLayer.Feedback>

@{
    ViewData["Title"] = "Testimonial";
}
<section class="client_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center" style="flex-direction:row;justify-content:space-between">
            <a asp-action="Create" asp-controller="Feedbacks" class="btn btn-primary">Add Review</a>
            <h2 style="justify-self:center;margin: 0 auto;text-align:center">
                Reviews
            </h2>
        </div>
    </div>
    <div class="container px-0">
        <div id="customCarousel2" class="carousel  carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var isFirst = true;
                }
                @foreach (var item in Model)
                {
                    <div class="carousel-item @(isFirst ? "active" : "")">
                        <div class="box">
                            <div class="client_info">
                                <div class="client_name">
                                    <h5>
                                        @(item.User != null ? item.User.Name : "Anonymous")
                                    </h5>
                                    <h6>
                                        @for (var i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Rating)
                                            {
                                                <i class="fa fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-star text-muted"></i>
                                            }
                                        }
                                    </h6>
                                </div>
                                <i class="fa fa-quote-left" aria-hidden="true"></i>
                            </div>
                            <p>
                                @Html.DisplayFor(itemReview => item.Review)
                            </p>
                        </div>
                    </div>
                    isFirst = false;
                }


            </div>
            <div class="carousel_btn-box">
                <a class="carousel-control-prev" href="#customCarousel2" role="button" data-slide="prev">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#customCarousel2" role="button" data-slide="next">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>
<!-- end client section -->
<script src="~/js/jquery-3.4.1.min.js"></script>
<script src="~/js/bootstrap.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
</script>
<script src="~/js/custom.js"></script>
