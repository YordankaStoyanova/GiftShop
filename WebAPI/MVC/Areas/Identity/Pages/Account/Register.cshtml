@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    :root {
        --primary: #4361ee;
        --primary-light: #3f37c9;
        --text: #2b2d42;
        --light: #f8f9fa;
        --border: #e0e0e0;
    }

    .auth-container {
        width: 100%;
        max-width: 400px;
        background: white;
        border-radius: 16px 16px 0 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin: 0 auto;
    }

    .auth-tabs {
        display: flex;
        position: relative;
    }

    .auth-tab {
        flex: 1;
        text-align: center;
        padding: 1.25rem;
        font-weight: 600;
        font-size: 1.1rem;
        color: #666;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .auth-tab.active {
        color: var(--primary);
    }

    .indicator {
        position: absolute;
        bottom: 0;
        margin-bottom: 10px;

        left: 0;
        height: 3px;
        width: 50%;
        background-color: var(--primary);
        border-radius: 3px 0 0 3px;
        transition: all 0.3s ease;
    }

    .auth-tab:nth-child(2).active ~ .indicator {
        transform: translateX(100%);
        border-radius: 0 3px 3px 0;
    }

    /* Card styling that matches the tabs */
    .form-card {
        background: white;
        border-radius: 0 0 16px 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin: 0 auto;
        max-width: 400px;
        position: relative;
        z-index: 1;
    }

    /* Maintain all existing card-3d styles */
    .card-3d-wrap {
        perspective: 1000px;
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    .card-3d-wrapper {
        transform-style: preserve-3d;
        position: relative;
    }

    .card-front {
        backface-visibility: hidden;
        transform-style: preserve-3d;
        transition: all 0.8s ease;
    }
</style>

<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <!-- Tabs Container -->
                    <div class="auth-container">
                        <div class="auth-tabs">
                            <a asp-area="Identity" asp-page="/Account/Login" class="auth-tab" data-tab="login">Login</a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="auth-tab active"
                               data-tab="signup">Sign Up</a>
                            <div class="indicator"></div>
                        </div>
                    </div>

                    <div class="form-card">
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <!-- Login Form -->
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <form id="account" method="post">
                                                <h4 class="mb-4 pb-3">Sign Up</h4>
                                                <div class="form-group">
                                                    <input asp-for="Input.Username" class="form-style"
                                                           placeholder="Your Name"/>
                                                    <span asp-validation-for="Input.Username"
                                                          class="text-danger"></span>
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input asp-for="Input.Email" class="form-style"
                                                           placeholder="Email"/>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input asp-for="Input.Password" class="form-style"
                                                           placeholder="Password"/>
                                                    <span asp-validation-for="Input.Password"
                                                          class="text-danger"></span>
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input asp-for="Input.ConfirmPassword" class="form-style"
                                                           placeholder="Confirm Password"/>
                                                    <span asp-validation-for="Input.ConfirmPassword"
                                                          class="text-danger"></span>
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <button type="submit" class="btn btn-primary mt-4">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
